@page
@model SmartTaskAPI.Pages.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center mb-4">Admin Dashboard</h2>
    <div class="row text-center">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white shadow-sm p-3">
                <h4>Total Users</h4>
                <h2>@Model.DashboardData.TotalUsers</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-secondary text-white shadow-sm p-3">
                <h4>Total Tasks</h4>
                <h2>@Model.DashboardData.TotalTasks</h2>
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <div class="card bg-warning text-dark shadow-sm p-3">
                <h5>Pending</h5>
                <h3>@Model.DashboardData.PendingTasks</h3>
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <div class="card bg-info text-white shadow-sm p-3">
                <h5>In Progress</h5>
                <h3>@Model.DashboardData.InProgressTasks</h3>
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <div class="card bg-success text-white shadow-sm p-3">
                <h5>Completed</h5>
                <h3>@Model.DashboardData.CompletedTasks</h3>
            </div>
        </div>
    </div>
</div>
